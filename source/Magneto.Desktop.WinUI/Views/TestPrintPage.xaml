<Page
    x:Class="Magneto.Desktop.WinUI.Views.TestPrintPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="10*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="1" Grid.Row="0" FontSize="16" 
                               HorizontalAlignment="Right" VerticalAlignment="Center" Margin=" 10,10,10,10" 
                               Text="Axis"/>
                <TextBlock Grid.Column="1" Grid.Row="1" FontSize="16" 
                               HorizontalAlignment="Right" VerticalAlignment="Center"  Margin=" 10,10,10,10" 
                               Text="Set Move Distance (mm)"/>
                <TextBlock Grid.Column="1" Grid.Row="2" FontSize="16" 
                               HorizontalAlignment="Right" VerticalAlignment="Center"  Margin=" 10,10,10,10" 
                               Text="Select Movement"/>
                <TextBlock Grid.Column="1" Grid.Row="3" FontSize="16" 
                               HorizontalAlignment="Right" VerticalAlignment="Center"  Margin=" 10,10,10,10" 
                               Text="Read Position"/>
            
                <Grid Grid.Column="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                
                    <Button x:Name="SelectPowderMotorButton" Content="Powder Motor" Grid.Column="0"
                            Height="60" Width="150" Margin="5" HorizontalAlignment="Center"
                            Background="DimGray"
                            Click="SelectPowderMotorButton_Click">
                    </Button>
                    <Button x:Name="SelectBuildMotorButton" Content="Build Motor" Grid.Column="1"
                            Height="60" Width="150" Margin="5" HorizontalAlignment="Center"
                            Background="DimGray"
                            Click="SelectBuildMotorButton_Click" >
                    </Button>
                    <Button x:Name="SelectSweepMotorButton" Content="Sweep Motor" Grid.Column="2"
                            Height="60" Width="150" Margin="5" HorizontalAlignment="Center"
                            Background="DimGray"
                            Click="SelectSweepMotorButton_Click">
                    </Button>
                
                </Grid>

                <TextBox  Grid.Column="2" Grid.Row="1" x:Name="DistanceTextBox" Text="{x:Bind ViewModel.DistanceText, Mode=TwoWay}" Width="100" Height ="20" 
                         MaxLength="100"></TextBox>

                <Grid Grid.Column="2" Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Button x:Name="MoveMotorButton" Content="Move Motor" Grid.Column="0" Grid.Row="4"
                            Height="60" Width="150" Margin="10" HorizontalAlignment="Center"
                            Background="DimGray"
                            Click="MoveMotorButton_Click">
                    </Button>
                    <Button x:Name="HomeMotorButton" Content="Home Motor" Grid.Column="1" Grid.Row="4" 
                            Height="60" Width="150" Margin="10" HorizontalAlignment="Center" 
                            Background="DimGray"
                            Click="HomeMotorButton_Click">
                    </Button>
                </Grid>
                <Grid Grid.Column="2" Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox  Grid.Column="0" x:Name="PositionTextBox" Text="{x:Bind ViewModel.PositionText, Mode=TwoWay}" Width="100" Height ="20" 
                         MaxLength="100"></TextBox>
                    <Button Grid.Column="1"  x:Name="GetPositionButton" Content="Get Position"
                            Height="60" Width="150" Margin="10" HorizontalAlignment="Center"
                            Background="DimGray"
                            Click="GetPositionButton_Click">
                    </Button>
                </Grid>
                

            </Grid>
            
        </Grid>
    </Grid>
</Page>
