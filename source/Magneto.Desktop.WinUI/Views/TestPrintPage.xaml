<Page
    x:Class="Magneto.Desktop.WinUI.Views.TestPrintPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:muxc="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="16*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            
            <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="2" CornerRadius="5" Padding="5">
                <ComboBox PlaceholderText="Calibrate Motors" VerticalAlignment="Center" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Width="1320">
                    <Grid>
                    <!-- Calibrate Motors -->
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"
                                  Text="Calibrate Motors"></TextBlock>
                        
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="2*"/>
                                </Grid.RowDefinitions>
                                <Button Grid.Column="0" x:Name="SelectBuildMotorButton" HorizontalAlignment="Center" Height="30" Content="Build Motor" Click="SelectBuildMotorButton_Click"></Button>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12"
                                            Text="Current Position:"></TextBlock>
                                    <TextBox Grid.Column="1" x:Name="BuildMotorCurrentPositionTextBox" Height="30" Margin="2" Text=" "></TextBox>
                                    <Button Grid.Column="2" x:Name="GetBuildMotorCurrentPositionButton" HorizontalAlignment="Center" Height="30" Content="Get Position"
                                            Click="GetBuildMotorCurrentPositionButton_Click"></Button>
                                </Grid>
                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12"
                                            Text="Move to Absolute Position:"></TextBlock>
                                    <TextBox Grid.Column="1" x:Name="BuildMotorAbsPositionTextBox" Height ="30" Margin="2" Text=""></TextBox>
                                    <Button Grid.Column="2" x:Name="MoveBuildToAbsPositionButton" HorizontalAlignment="Center" Height="30" Content="Go" Click="MoveBuildToAbsPositionButton_Click"></Button>
                                </Grid>
                                <Grid Grid.Row="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12"
                                            Text="Step:"></TextBlock>
                                    <TextBox Grid.Column="1" x:Name="BuildMotorStepTextBox" Height ="30" Margin="2" 
                                            Text=" "></TextBox>
                                    <Grid Grid.Column="2" HorizontalAlignment="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Button Grid.Column="0" x:Name="StepBuildMotorUpButton" HorizontalAlignment="Center" Height="30" Margin="2" Content="U"
                                            Click="StepBuildMotorUpButton_Click"></Button>
                                        <Button Grid.Column="1" x:Name="StepBuildMotorDownButton" HorizontalAlignment="Center" Height="30" Content="D"
                                            Click="StepBuildMotorDownButton_Click"></Button>
                                    </Grid>
                                </Grid>
                                <Button Grid.Row="4" x:Name="StopBuildMotorInCalibrateButton" HorizontalAlignment="Center" Height="30" Content="Stop B" Click="StopBuildMotorInCalibrateButton_Click"></Button>
                            </Grid>

                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="2*"/>
                                </Grid.RowDefinitions>
                                <Button Grid.Column="0" x:Name="SelectPowderMotorButton" HorizontalAlignment="Center" Height="30" Content="Powder Motor" Click="SelectPowderMotorButton_Click"></Button>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12"
                                            Text="Current Position:"></TextBlock>
                                    <TextBox Grid.Column="1" x:Name="PowderMotorCurrentPositionTextBox" Height="30" Margin="2" Text=" "></TextBox>
                                    <Button Grid.Column="2" x:Name="GetPowderMotorCurrentPositionButton" HorizontalAlignment="Center" Height="30" Content="Get Position"
                                            Click="GetPowderMotorCurrentPositionButton_Click"></Button>
                                </Grid>
                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12"
                                            Text="Move to Absolute Position:"></TextBlock>
                                    <TextBox Grid.Column="1" x:Name="PowderMotorAbsPositionTextBox" Height ="30" Margin="2" Text=""></TextBox>
                                    <Button Grid.Column="2" x:Name="MovePowderToAbsPositionButton" HorizontalAlignment="Center" Height="30" Content="Go" Click="MovePowderToAbsPositionButton_Click"></Button>
                                </Grid>
                                <Grid Grid.Row="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12"
                                            Text="Step:"></TextBlock>
                                    <TextBox Grid.Column="1" x:Name="PowderMotorStepTextBox" Height ="30" Margin="2" 
                                            Text=" "></TextBox>
                                    <Grid Grid.Column="2" HorizontalAlignment="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Button Grid.Column="0" x:Name="StepPowderMotorUpButton" HorizontalAlignment="Center" Height="30" Margin="2" Content="U"
                                            Click="StepPowderMotorUpButton_Click"></Button>
                                        <Button Grid.Column="1" x:Name="StepPowderMotorDownButton" HorizontalAlignment="Center" Height="30" Content="D" Click="StepPowderMotorDownButton_Click"></Button>
                                    </Grid>
                                </Grid>
                                <Button Grid.Row="4" x:Name="StopPowderMotorInCalibrateButton" HorizontalAlignment="Center" Height="30" Content="Stop P" Click="StopPowderMotorInCalibrateButton_Click"></Button>
                            </Grid>

                            <Grid Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="2*"/>
                                </Grid.RowDefinitions>
                                <Button Grid.Column="0" x:Name="SelectSweepMotorButton" HorizontalAlignment="Center" Height="30" Content="Sweep Motor" Click="SelectSweepMotorButton_Click"></Button>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12" Text="Current Position:"></TextBlock>
                                    <TextBox Grid.Column="1" x:Name="SweepMotorCurrentPositionTextBox" Height="30" Margin="2" Text=" "></TextBox>
                                    <Button Grid.Column="2" x:Name="GetSweepMotorCurrentPositionButton" HorizontalAlignment="Center" Height="30" Content="Get Position"
                                            Click="GetSweepMotorCurrentPositionButton_Click"></Button>
                                </Grid>
                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12"
                                            Text="Move to Absolute Position:"></TextBlock>
                                    <TextBox Grid.Column="1" x:Name="SweepMotorAbsPositionTextBox" Height ="30" Margin="2" Text=""></TextBox>
                                    <Button Grid.Column="2" x:Name="MoveSweepToAbsPositionButton" HorizontalAlignment="Center" Height="30" Content="Go" Click="MoveSweepToAbsPositionButton_Click"></Button>
                                </Grid>
                                <Grid Grid.Row="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12"
                                            Text="Step:"></TextBlock>
                                    <TextBox Grid.Column="1" x:Name="SweepMotorStepTextBox" Height ="30" Margin="2" 
                                            Text=" "></TextBox>
                                    <Grid Grid.Column="2" HorizontalAlignment="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Button Grid.Column="0" x:Name="StepSweepMotorLeftInCalibrateButton" HorizontalAlignment="Center" Height="30" Margin="2" Content="L" Click="StepSweepMotorLeftInCalibrateButton_Click"></Button>
                                        <Button Grid.Column="1" x:Name="StepSweepMotorRightInCalibrateButton" HorizontalAlignment="Center" Height="30" Content="R" Click="StepSweepMotorRightInCalibrateButton_Click"></Button>
                                    </Grid>
                                </Grid>
                                <Button Grid.Row="4" x:Name="StopSweepMotorInCalibrateButton" HorizontalAlignment="Center" Height="30" Content="Stop S" Click="StopSweepMotorInCalibrateButton_Click"></Button>
                            </Grid>
                        </Grid>

                        <Grid Grid.Row="2" HorizontalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" x:Name="StopAllMotorsInCalibrationPanelButton" HorizontalAlignment="Right" VerticalAlignment="Top" Height="30" Margin="2" Background="Red" Content="Stop All Motors"
                                Click="StopAllMotorsInCalibrationPanelButton_Click"></Button>
                            <Button Grid.Column="1" x:Name="HomeAllMotorsInCalibrationPanelButton" HorizontalAlignment="Center" VerticalAlignment="Top" Height="30" Margin="2" Content="Home All Motors"
                                Click="HomeAllMotorsInCalibrationPanelButton_Click"></Button>
                            <Button Grid.Column="2" x:Name="ToggleCalibrationPanelButtonLock" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Margin="2" Content="Lock Calibration"
                                Click="ToggleCalibrationPanelButtonLock_Click"></Button>
                        </Grid>

                    </Grid>
                </ComboBox>
            </Border>

            <Grid Grid.Row="2"> <!-- Print Settings and Print Management -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="9*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="9*"/>
                </Grid.ColumnDefinitions>
                
                <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="2" CornerRadius="5" Padding="5">
                    <Grid> <!-- Print Settings -->
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="12*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="12*"/>
                            <RowDefinition Height="4*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <!-- File Settings -->
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Text="File Settings"></TextBlock>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="2" FontWeight="Bold" Text="Search Directory"></TextBlock>
                                <TextBox Grid.Column="1" x:Name="JobFileSearchDirectoryTextBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="360" Margin="2"></TextBox>
                                <Button Grid.Column="2" x:Name="UpdateDirectoryButton" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="2" Content="Update"
                                        Click="UpdateDirectoryButton_Click"></Button>
                            </Grid>
                            <Grid Grid.Row="2" HorizontalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="2" FontWeight="Bold" Text="File Name:"></TextBlock>
                                <TextBox Grid.Column="1" x:Name="JobFileNameTextBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Margin="2"></TextBox>
                                <Button Grid.Column="2" x:Name="UseDefaultJobButton" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2" Content="Use Default Job"
                                        Click="UseDefaultJobButton_Click"></Button>
                                <Button Grid.Column="3" x:Name="GetJobButton" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2" Content="Update"
                                        Click="GetJobButton_Click"></Button>
                            </Grid>
                            <Grid Grid.Row="3">
                                <!-- Marking -->
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0" x:Name="ToggleRedPointerButton" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Toggle Red Pointer"
                                        Click="ToggleRedPointerButton_Click" IsEnabled="False"></Button>
                                <TextBlock Grid.Column="1" x:Name="RedPointerInfoText" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"
                                           Text="Red pointer must be off to Start Mark" Foreground="DarkGray"></TextBlock>
                                <Button Grid.Column="2" x:Name="StartMarkButton" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="1" Content="Start Mark"
                                        Click="StartMarkButton_Click" IsEnabled="False"></Button>
                                <Button Grid.Column="3" x:Name="StopMarkButton" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="1" Content="Stop Mark"
                                        Click="StopMarkButton_Click"></Button>
                            </Grid>
                        </Grid>
                        <!-- Layer Settings -->
                        <Grid Grid.Row="3">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"
                                Text="Layer Settings"></TextBlock>
                            <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" FontWeight="Bold" Text="Set layer thickness:"></TextBlock>
                                <TextBox Grid.Column="1" x:Name="SetLayerThicknessTextBox" Height ="30" Margin="2" 
                                        Text=" "></TextBox>
                                <TextBlock Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="2" 
                                           Text="mm"></TextBlock>
                                <Button Grid.Column="3" x:Name="UpdateLayerThicknessButton" HorizontalAlignment="Left" Height="30" Margin="2" Content="Update"
                                        Click="UpdateLayerThicknessButton_Click"></Button>
                            </Grid>
                            <Grid Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" FontWeight="Bold" Text="Desired print height: "></TextBlock>
                                <TextBox Grid.Column="1" x:Name="DesiredPrintHeightTextBox" Width="30" Height ="30" Margin="2" Text=" "></TextBox>
                                <TextBlock Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="2" FontSize="12" Text="mm"></TextBlock>
                                <Button Grid.Column="3" x:Name="UpdateDesiredPrintHeightButton" HorizontalAlignment="Left" Height="30" Margin="2" Content="Update"
                                        Click="UpdateDesiredPrintHeightButton_Click"></Button>
                            </Grid>
                            <Grid Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" VerticalAlignment="Center" FontSize="12" Margin="2" FontWeight="Bold" Text="Estimated layers to print: "></TextBlock>
                                <TextBlock Grid.Column="2" x:Name="EstimatedLayersToPrintTextBlock" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="12" Margin="2"></TextBlock>
                            </Grid>
                        </Grid>
                        <Button Grid.Row="4" Content="Lock Settings" HorizontalAlignment="Center"></Button>
                    </Grid>
                </Border>

                <Border Grid.Column="2" BorderBrush="Gray" BorderThickness="2" CornerRadius="5" Padding="5">
                    <Grid> <!-- Print Management -->
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="7*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Text="Print"></TextBlock>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="3*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" HorizontalAlignment="Left" FontWeight="Bold" Margin="2" Text="Print Directory: "></TextBlock>
                                    <TextBlock Grid.Column="1" x:Name="CurrentPrintDirectory" HorizontalAlignment="Left" Margin="2"></TextBlock>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="3*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" HorizontalAlignment="Left" FontWeight="Bold" Margin="2" Text="Job file: "></TextBlock>
                                    <TextBlock Grid.Column="1" x:Name="CurrentJobFile" HorizontalAlignment="Left" Margin="2"></TextBlock>
                                </Grid>
                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" HorizontalAlignment="Left" FontWeight="Bold" Margin="2" Text="Current layer thickness: "></TextBlock>
                                    <TextBlock Grid.Column="1" x:Name="CurrentLayerThickness" HorizontalAlignment="Center"></TextBlock>
                                    <TextBlock Grid.Column="2" HorizontalAlignment="Left" FontWeight="Bold" Margin="2" Text="Current total print height: "></TextBlock>
                                    <TextBlock Grid.Column="3" x:Name="CurrentTotalPrintHeight" HorizontalAlignment="Center"></TextBlock>
                                </Grid>
                                <Grid Grid.Row="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" HorizontalAlignment="Left" FontWeight="Bold" Margin="2" Text="Layers Printed: "></TextBlock>
                                    <TextBlock Grid.Column="1" x:Name="LayersPrintedTextBlock" HorizontalAlignment="Center"></TextBlock>
                                    <TextBlock Grid.Column="2" HorizontalAlignment="Left" FontWeight="Bold" Margin="2" Text="Remaining layers to print: "></TextBlock>
                                    <TextBlock Grid.Column="3" x:Name="RemainingLayersToPrint" HorizontalAlignment="Center"></TextBlock>
                                </Grid>
                            </Grid>  <!-- Locked in Settings Display -->
                            <Grid Grid.Column="1" x:Name="PrintHistoryGrid" HorizontalAlignment="Center" VerticalAlignment="Top">  <!-- Print History Grid -->
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                            </Grid> 
                        </Grid>
                        
                        <Grid Grid.Row="2">  <!-- Start New Print / Cancel Print Buttons -->
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" x:Name="StartNewPrintButton" HorizontalAlignment="Right" VerticalAlignment="Center" Height="30" Width="150" Margin="2" Content="Start New Print" Click="StartNewPrintButton_Click"></Button>
                            <Button Grid.Column="1" x:Name="CancelPrintButton" HorizontalAlignment="Left" VerticalAlignment="Center" Height="30" Width="150" Margin="2" Content="Cancel Print" Click="CancelPrintButton_Click"></Button>
                        </Grid>
                        
                        <Grid Grid.Row="3">  <!-- Movement Orders -->
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="2" CornerRadius="5" Padding="5">
                                <Grid Grid.Column="0">  <!-- Layer Move -->
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Button Grid.Row="0" x:Name="EnableLayerMoveButton" VerticalAlignment="Top" HorizontalAlignment="Center" Height="50" Content="Move by Layer"
                                        Click="EnableLayerMoveButton_Click"></Button>
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Button Grid.Column="0" x:Name="MoveToNextLayerStartPositionButton" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="110" Margin="2" Content="Next Layer" Click="MoveToNextLayerStartPositionButton_Click"></Button>
                                        <Button Grid.Column="1" x:Name="StopSingleLayerMoveButton" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Margin="2" Background="Red" Content="Stop" Click="StopSingleLayerMoveButton_Click"></Button>
                                    </Grid>
                                    <Grid Grid.Row="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Button Grid.Column="0" x:Name="StartMarkInLayerMoveButton" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="110" Margin="2" Content="Mark" Click="StartMarkInLayerMoveButton_Click"></Button>
                                        <Button Grid.Column="1" x:Name="StopMarkInLayerMoveButton" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Margin="2" Background="Red" Content="Stop" Click="StopMarkInLayerMoveButton_Click"></Button>
                                    </Grid>
                                    <Grid Grid.Row="3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Button Grid.Column="0" x:Name="ReturnSweepInLayerMoveButton" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="110" Margin="2" Content="Return Sweep" Click="ReturnSweepInLayerMoveButton_Click"></Button>
                                        <Button Grid.Column="1" x:Name="StopReturnSweepInLayerMoveButton" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Margin="2" Background="Red" Content="Stop" Click="StopReturnSweepInLayerMoveButton_Click"></Button>
                                    </Grid>
                                    <Grid Grid.Row="4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Text="Print "></TextBlock>
                                        <TextBox Grid.Column="1" x:Name="MultiLayerMoveInputTextBox" VerticalAlignment="Center" Width="5"></TextBox>
                                        <TextBlock Grid.Column="2" VerticalAlignment="Center" Text=" layers"></TextBlock>
                                    </Grid>
                                    <Grid Grid.Row="5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Button Grid.Column="0" x:Name="StartMultiLayerMoveButton" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Margin="2" Content="Start Multi-Layer Move" Click="StartMultiLayerMoveButton_Click"></Button>
