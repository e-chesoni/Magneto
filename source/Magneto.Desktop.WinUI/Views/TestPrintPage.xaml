<Page
    x:Class="Magneto.Desktop.WinUI.Views.TestPrintPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:muxc="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="6*"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="12*"/>
                <RowDefinition Height="5"/>
            </Grid.RowDefinitions>
            
            <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="2" CornerRadius="5" Padding="5">
                <Grid>
                    <!-- Calibrate Motors -->
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"
                                  Text="Calibrate Motors"></TextBlock>
                        
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="2*"/>
                                </Grid.RowDefinitions>
                                <Button Grid.Column="0" x:Name="SelectBuildMotorButton" HorizontalAlignment="Center" Height="30" Content="Build Motor" Click="SelectBuildMotorButton_Click"></Button>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12"
                                            Text="Current Position:"></TextBlock>
                                    <TextBox Grid.Column="1" x:Name="BuildMotorCurrentPositionTextBox" Height="30" Margin="2" Text=" "></TextBox>
                                    <Button Grid.Column="2" x:Name="GetBuildMotorCurrentPositionButton" HorizontalAlignment="Center" Height="30" Content="Get Position"
                                            Click="GetBuildMotorCurrentPositionButton_Click"></Button>
                                </Grid>
                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12"
                                            Text="Move to Absolute Position:"></TextBlock>
                                    <TextBox Grid.Column="1" x:Name="BuildMotorAbsPositionTextBox" Height ="30" Margin="2" Text=""></TextBox>
                                    <Button Grid.Column="2" x:Name="MoveBuildToAbsPositionButton" HorizontalAlignment="Center" Height="30" Content="Go" Click="MoveBuildToAbsPositionButton_Click"></Button>
                                </Grid>
                                <Grid Grid.Row="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12"
                                            Text="Step:"></TextBlock>
                                    <TextBox Grid.Column="1" x:Name="BuildMotorStepTextBox" Height ="30" Margin="2" 
                                            Text=" "></TextBox>
                                    <Grid Grid.Column="2" HorizontalAlignment="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Button Grid.Column="0" x:Name="StepBuildMotorUpButton" HorizontalAlignment="Center" Height="30" Margin="2" Content="U"
                                            Click="StepBuildMotorUpButton_Click"></Button>
                                        <Button Grid.Column="1" x:Name="StepBuildMotorDownButton" HorizontalAlignment="Center" Height="30" Content="D"
                                            Click="StepBuildMotorDownButton_Click"></Button>
                                    </Grid>
                                </Grid>
                                <Grid Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Column="0" x:Name="EnableBuildButton" HorizontalAlignment="Center" Height="30" Content="Enable" Background="Green" Click="EnableBuildMotorButton_Click"></Button>
                                    <Button Grid.Column="2" x:Name="StopBuildMotorButton" HorizontalAlignment="Center" Height="30" Content="Stop" Background="Red" Click="StopBuildMotorButton_Click"></Button>
                            </Grid>
                        </Grid>

                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="2*"/>
                                </Grid.RowDefinitions>
                                <Button Grid.Column="0" x:Name="SelectPowderMotorButton" HorizontalAlignment="Center" Height="30" Content="Powder Motor" Click="SelectPowderMotorButton_Click"></Button>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12"
                                            Text="Current Position:"></TextBlock>
                                    <TextBox Grid.Column="1" x:Name="PowderMotorCurrentPositionTextBox" Height="30" Margin="2" Text=" "></TextBox>
                                    <Button Grid.Column="2" x:Name="GetPowderMotorCurrentPositionButton" HorizontalAlignment="Center" Height="30" Content="Get Position"
                                            Click="GetPowderMotorCurrentPositionButton_Click"></Button>
                                </Grid>
                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12"
                                            Text="Move to Absolute Position:"></TextBlock>
                                    <TextBox Grid.Column="1" x:Name="PowderMotorAbsPositionTextBox" Height ="30" Margin="2" Text=""></TextBox>
                                    <Button Grid.Column="2" x:Name="MovePowderToAbsPositionButton" HorizontalAlignment="Center" Height="30" Content="Go" Click="MovePowderToAbsPositionButton_Click"></Button>
                                </Grid>
                                <Grid Grid.Row="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12"
                                            Text="Step:"></TextBlock>
                                    <TextBox Grid.Column="1" x:Name="PowderMotorStepTextBox" Height ="30" Margin="2" 
                                            Text=" "></TextBox>
                                    <Grid Grid.Column="2" HorizontalAlignment="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Button Grid.Column="0" x:Name="StepPowderMotorUpButton" HorizontalAlignment="Center" Height="30" Margin="2" Content="U"
                                            Click="StepPowderMotorUpButton_Click"></Button>
                                        <Button Grid.Column="1" x:Name="StepPowderMotorDownButton" HorizontalAlignment="Center" Height="30" Content="D" Click="StepPowderMotorDownButton_Click"></Button>
                                    </Grid>
                                </Grid>
                                <Grid Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Column="0" x:Name="EnablePowderButton" HorizontalAlignment="Center" Height="30" Content="Enable" Background="Green" Click="EnablePowderMotorButton_Click"></Button>
                                    <Button Grid.Column="2" x:Name="StopPowderMotorButton" HorizontalAlignment="Center" Height="30" Content="Stop" Background="Red" Click="StopPowderMotorButton_Click"></Button>
                            </Grid>
                        </Grid>

                            <Grid Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="2*"/>
                                </Grid.RowDefinitions>
                                <Button Grid.Column="0" x:Name="SelectSweepMotorButton" HorizontalAlignment="Center" Height="30" Content="Sweep Motor" Click="SelectSweepMotorButton_Click"></Button>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12" Text="Current Position:"></TextBlock>
                                    <TextBox Grid.Column="1" x:Name="SweepMotorCurrentPositionTextBox" Height="30" Margin="2" Text=" "></TextBox>
                                    <Button Grid.Column="2" x:Name="GetSweepMotorCurrentPositionButton" HorizontalAlignment="Center" Height="30" Content="Get Position"
                                            Click="GetSweepMotorCurrentPositionButton_Click"></Button>
                                </Grid>
                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12"
                                            Text="Move to Absolute Position:"></TextBlock>
                                    <TextBox Grid.Column="1" x:Name="SweepMotorAbsPositionTextBox" Height ="30" Margin="2" Text=""></TextBox>
                                    <Button Grid.Column="2" x:Name="MoveSweepToAbsPositionButton" HorizontalAlignment="Center" Height="30" Content="Go" Click="MoveSweepToAbsPositionButton_Click"></Button>
                                </Grid>
                                <Grid Grid.Row="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12"
                                            Text="Step:"></TextBlock>
                                    <TextBox Grid.Column="1" x:Name="SweepMotorStepTextBox" Height ="30" Margin="2" 
                                            Text=" "></TextBox>
                                    <Grid Grid.Column="2" HorizontalAlignment="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Button Grid.Column="0" x:Name="StepSweepMotorLeftButton" HorizontalAlignment="Center" Height="30" Margin="2" Content="L" Click="StepSweepMotorLeftButton_Click"></Button>
                                        <Button Grid.Column="1" x:Name="StepSweepMotorRightButton" HorizontalAlignment="Center" Height="30" Content="R" Click="StepSweepMotorRightButton_Click"></Button>
                                    </Grid>
                                </Grid>
                                <Grid Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Column="0" x:Name="EnableSweepButton" HorizontalAlignment="Center" Height="30" Content="Enable" Background="Green" Click="EnableSweepMotorButton_Click"></Button>
                                    <Button Grid.Column="2" x:Name="StopSweepMotorButton" HorizontalAlignment="Center" Height="30" Content="Stop" Background="Red" Click="StopSweepMotorButton_Click"></Button>
                            </Grid>
                            </Grid>
                        </Grid>

                        <Grid Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" x:Name="HomeAllMotorsButton" HorizontalAlignment="Center" VerticalAlignment="Top" Height="30" Margin="2" Content="Home All Motors"
                                Click="HomeAllMotorsButton_Click"/>
                        <Button Grid.Column="2" x:Name="EnableMotorsButton" HorizontalAlignment="Center" VerticalAlignment="Top" Height="30" Margin="2" Background="Green" Content="Enable Motors"
                                Click="EnableMotorsButton_Click"/>
                        <Button Grid.Column="4" x:Name="StopMotorsButton" HorizontalAlignment="Center" VerticalAlignment="Top" Height="30" Margin="2" Background="Red" Content="Stop Motors"
                                Click="StopMotorsButton_Click"/>
                    </Grid>

                    </Grid>
            </Border>
            <Border Grid.Row="2" BorderBrush="Gray" BorderThickness="2" CornerRadius="5" Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/> <!--0-->
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="4*"/> <!--2-->
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="1*"/> <!--4-->
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="6*"/> <!--6-->
                        <RowDefinition Height="5"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" 
                                 x:Name="PrintDirectoryInputTextBox"
                                 Width="400"
                                 Height="40"
                                 PlaceholderText="Select a folder..."
                                 IsReadOnly="True"
                                 HorizontalAlignment="Right" />
                        <Button Grid.Column="2"
                                Content="Browse"
                                Width="150"
                                Height="40"
                                HorizontalAlignment="Center"
                                Click="BrowseButton_Click"/>
                        <Button Grid.Column="4"
                                Content="Delete Print"
                                Height="40" 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="2"
                                Click="DeletePrintButton_Click"/>
                        <Button Grid.Column="6"
                                Content="TEST"
                                Width="150"
                                Height="40"
                                HorizontalAlignment="Center"
                                Click="TEST_Click"/>
                    </Grid>

                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Current Slice: "
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Right"/>
                        </Grid>

                        <Grid Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- Row 0: Labels -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Layer:" 
                                        VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,2"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="File Name:" 
                                        VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,2"/>
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="Layer Thickness:" 
                                        VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,2"/>
                            <TextBlock Grid.Row="0" Grid.Column="3" Text="Power:" 
                                        VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,2"/>
                            <TextBlock Grid.Row="0" Grid.Column="4" Text="Scan Speed:" 
                                        VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,2"/>
                            <TextBlock Grid.Row="0" Grid.Column="5" Text="Hatch Spacing:" 
                                        VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,2"/>
                            <TextBlock Grid.Row="0" Grid.Column="6" Text="Energy Density:" 
                                        VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,2"/>
                            <TextBlock Grid.Row="0" Grid.Column="7" Text="Slices to mark:" 
                                        VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,2"/>
                            <TextBlock Grid.Row="0" Grid.Column="8" Text="Supply Amplifier:" 
                                        VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,2"/>

                            <!-- Row 1: Inputs -->
                            <TextBox Grid.Row="1" Grid.Column="0" x:Name="LayerTextBox" 
                                    VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="10,2" IsEnabled="False"/>
                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="CurrentSliceTextBox"
                                     Width="300"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Center"
                                     Margin="10,2"
                                     IsEnabled="False"/>
                            <TextBox Grid.Row="1" Grid.Column="2" x:Name="LayerThicknessTextBox" 
                                    VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="10,2"/>
                            <TextBox Grid.Row="1" Grid.Column="3" x:Name="PowerTextBox" 
                                    VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="10,2" IsEnabled="False"/>
                            <TextBox Grid.Row="1" Grid.Column="4" x:Name="ScanSpeedTextBox" 
                                    VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="10,2" IsEnabled="False"/>
                            <TextBox Grid.Row="1" Grid.Column="5" x:Name="HatchSpacingTextBox" 
                                    VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="10,2" IsEnabled="False"/>
                            <TextBox Grid.Row="1" Grid.Column="6" x:Name="EnergyDensityTextBox" 
                                    VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="10,2" IsEnabled="False"/>
                            <TextBox Grid.Row="1" Grid.Column="7" x:Name="SlicesToMarkTextBox"
                                    VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="10,2"/>
                            <TextBox Grid.Row="1" Grid.Column="8" x:Name="SupplyAmplifierTextBox"
                                    VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="10,2"/>
                            <CheckBox Grid.Row="1" Grid.Column="9" x:Name="StartWithMarkCheckbox"
                                      Content="Start with mark"
                                      IsChecked="True"/>
                        </Grid>

                        <Grid Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                                <Button Grid.Column="0"
                                        x:Name="PrintLayersButton"
                                        Height="30" 
                                        HorizontalAlignment="Center" 
                                        VerticalAlignment="Center" 
                                        Margin="2" 
                                        Content="Mark"
                                        Click="PrintLayersButton_Click"/>
                                <Button Grid.Column="2"
                                        x:Name="PausePrintButton"
                                        Content="Stop"
                                        Height="30" 
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Margin="2"
                                        Background="Red"
                                        Click="PausePrintButton_Click"></Button>
                                <Button Grid.Column="4"
                                        Content="Reset"
                                        Height="30" 
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Margin="2"/>
                        </Grid>
                        
                    </Grid>
                    
                    <Grid Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Print Name: "
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       Padding="10"/>
                            <TextBlock/>
                            <TextBlock Grid.Column="1"
                                       x:Name="PrintNameTextBlock"
                                       Text="Directory"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"/>
                        </Grid>

                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Status: "
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       Padding="10"/>
                            <TextBlock/>
                            <TextBlock Grid.Column="1"
                                       x:Name="StatusTextBlock"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"/>
                        </Grid>

                        <Grid Grid.Column="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Duration: "
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       Padding="10"/>
                            <TextBlock/>
                            <TextBlock Grid.Column="1"
                                       x:Name="DurationTextBlock"
                                       VerticalAlignment="Center"
                                        HorizontalAlignment="Left"/>
                        </Grid>
                        <StackPanel Grid.Column="3"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Margin="10,0">
                            <!-- Padding: L, T, R, B-->
                            <TextBlock Text="Marked:" 
                                       VerticalAlignment="Center"
                                       Padding="2,0"/>
                            <TextBlock x:Name="SlicesMarkedTextBlock" 
                                       VerticalAlignment="Center"
                                       />
                            <TextBlock Text="/" 
                                       VerticalAlignment="Center"/>
                            <TextBlock x:Name="TotalSlicesTextBlock" 
                                       VerticalAlignment="Center"
                                       Padding="0,0,2,0"/>
                            <TextBlock Text="slices" 
                                       VerticalAlignment="Center"
                                       Padding="2,0"/>
                        </StackPanel>
                    </Grid>
                    
                    <Grid Grid.Row="6">
                        <controls:DataGrid
                             Grid.Row="1"
                             AutoGenerateColumns="False"
                             GridLinesVisibility="Horizontal"
                             ItemsSource="{x:Bind ViewModel.sliceCollection, Mode=OneWay}">
                            <controls:DataGrid.Resources>
                                <SolidColorBrush x:Key="DataGridColumnHeaderBackgroundColor" Color="Transparent" />
                            </controls:DataGrid.Resources>
                            <controls:DataGrid.Columns>
                                <controls:DataGridTextColumn Binding="{Binding id}" Header="Slice ID" />
                                <controls:DataGridTextColumn Binding="{Binding filePath}" Header="Image Path" />
                                <controls:DataGridTextColumn Binding="{Binding layer}" Header="Layer" />
                                <controls:DataGridTextColumn Binding="{Binding layerThickness}" Header="Layer Thickness" />
                                <controls:DataGridTextColumn Binding="{Binding power}" Header="Power" />
                                <controls:DataGridTextColumn Binding="{Binding scanSpeed}" Header="Scan Speed" />
                                <controls:DataGridTextColumn Binding="{Binding hatchSpacing}" Header="Hatch Spacing" />
                                <controls:DataGridTextColumn Binding="{Binding energyDensity}" Header="Energy Density" />
                                <controls:DataGridTextColumn Binding="{Binding marked}" Header="Marked?" />
                                <controls:DataGridTextColumn Binding="{Binding markedAt}" Header="Marked At" />
                            </controls:DataGrid.Columns>
                        </controls:DataGrid>
                    </Grid>

                </Grid>
                
            </Border>
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="9*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="9*"/>
                </Grid.ColumnDefinitions>
                
                <Border Grid.Column="2" BorderBrush="Gray" BorderThickness="2" CornerRadius="5" Padding="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="2" CornerRadius="5" Padding="5">
                                <Grid Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Text="Print "></TextBlock>
                                            <TextBlock Grid.Column="2" VerticalAlignment="Center" Text=" layers"></TextBlock>
                                        </Grid>
                                    </Grid>
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                    </Grid>
                                </Grid>
                            </Border>
                            
                        </Grid>

                    </Grid>
                </Border>

            </Grid>

        </Grid>
    </Grid>
</Page>
